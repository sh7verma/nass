                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <app.com.esenatenigeria.customviews.SemiboldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="@string/no_data"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <app.com.esenatenigeria.customviews.RegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:text="@string/no_data"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <app.com.esenatenigeria.customviews.SemiboldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="@string/no_data"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <app.com.esenatenigeria.customviews.SemiboldTextView
                android:id="@+id/txt_previous_office_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:text="@string/previous_offices"
                android:textAllCaps="true"
                android:textColor="@color/red_dark"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_previous_office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/white"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
