<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_bill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <app.com.esenatenigeria.customviews.SemiboldTextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@string/national_institute_for_legislative_studies_amendment_act_2017"
                android:textAllCaps="true"
                android:textColor="@color/red_dark"
                android:textSize="@dimen/_12ssp" />

            <app.com.esenatenigeria.customviews.RegularTextView
                android:id="@+id/txt_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="5"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/Lorem_Ipsum_larger"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <app.com.esenatenigeria.customviews.BoldTextView
                    android:id="@+id/txt_parliament"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8th Parliament"
                    android:textSize="@dimen/_8ssp" />

                <app.com.esenatenigeria.customviews.RegularTextView
                    android:id="@+id/txt_session"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | 3rd Session |"
                    android:textSize="@dimen/_8ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <app.com.esenatenigeria.customviews.BoldTextView
                    android:id="@+id/txt_chamber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NASS"
                    android:textSize="@dimen/_8ssp" />

                <app.com.esenatenigeria.customviews.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | Acts |"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="gone" />

                <app.com.esenatenigeria.customviews.BoldTextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 24/01/2018 "
                    android:textSize="@dimen/_8ssp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>